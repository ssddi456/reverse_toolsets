    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeExecutable": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/transpile-only"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/tslib/**"
            ],
            "cwd": "${workspaceRoot}",
            "program": "${file}",
        }
    ]
}